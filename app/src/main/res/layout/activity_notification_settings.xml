<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        app:liftOnScroll="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:title="Notificações"
            app:collapsedTitleTextAppearance="@style/TextAppearance.AppCompat.Title"
            app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Display1"
            app:expandedTitleMarginStart="20dp"
            app:expandedTitleMarginBottom="20dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Altura alterada para match_parent para permitir expansão -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- Card 1: Configuração Global (Switch) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="?android:attr/textColorSecondary"
                app:cardBackgroundColor="?android:attr/colorBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="24dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Espelhamento"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="?android:attr/textColorPrimary"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enviar notificações para o relógio"
                            android:textSize="14sp"
                            android:textColor="?android:attr/textColorSecondary"/>
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchEnableMirroring"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card 2: Aviso de Permissão (Separado e Condicional) -->
            <LinearLayout
                android:id="@+id/layoutPermissionWarning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_warning_rounded"
                android:padding="16dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvStatusPermission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Permissão de leitura necessária"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/colorError"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="O app precisa ler as notificações do sistema para enviá-las ao relógio. Toque abaixo para resolver."
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginTop="8dp"/>

                <Button
                    android:id="@+id/btnOpenSettings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Conceder Acesso"
                    android:textColor="?android:attr/colorError"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="end"
                    style="@style/Widget.MaterialComponents.Button.TextButton"/>
            </LinearLayout>

            <!-- Card 3: Seção da Lista de Apps
                 Adicionado layout_weight=1 para preencher o resto da tela
                 Se o conteúdo (lista) crescer, o wrap_content permite scroll normal -->
            <LinearLayout
                android:id="@+id/layoutAppsSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aplicativos"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginStart="24dp"
                    android:layout_marginBottom="12dp"/>

                <!-- Loading Group (Novo Container Centralizado)
                     Altura 0dp + weight=1 garante que o loading ocupe todo o espaço disponível
                     abaixo do título, centralizando o conteúdo visualmente -->
                <LinearLayout
                    android:id="@+id/layoutLoadingApps"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="32dp"
                    android:visibility="gone">

                    <ProgressBar
                        android:id="@+id/progressBarApps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:indeterminateTint="?attr/colorOnPrimary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Carregando aplicativos..."
                        android:layout_marginTop="16dp"
                        android:textColor="?android:attr/textColorSecondary"/>
                </LinearLayout>

                <!-- Lista de Apps (sem weight, expande naturalmente) -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewApps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="26dp"
                    android:nestedScrollingEnabled="false"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>