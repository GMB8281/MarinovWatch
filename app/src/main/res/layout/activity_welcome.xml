<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:background="?android:attr/colorBackground">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ic_smartwatch"
            app:tint="?attr/colorPrimary"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bem-vindo!"
            android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Como este dispositivo será usado?"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="48dp"
            android:textAlignment="center"/>

        <!-- Card Smartphone -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSmartphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="24dp"
            app:strokeWidth="0dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurfaceContainerHigh">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="24dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_smartphone"
                    app:tint="?attr/colorPrimary"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Smartphone"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Este é o meu smartphone."
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="?android:attr/textColorSecondary"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card Watch -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardWatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="24dp"
            app:strokeWidth="0dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurfaceContainerHigh">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="24dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_smartwatch"
                    app:tint="?attr/colorPrimary"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Relógio inteligente"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Este é o meu relógio inteligente."
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="?android:attr/textColorSecondary"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>