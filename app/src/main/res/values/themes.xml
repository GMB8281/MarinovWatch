<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema Base da Aplicação -->
    <style name="Theme.Smartwatch" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Cores principais (Baseadas no seu layout) -->
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <!-- Cor secundária -->
        <item name="colorSecondary">#03DAC5</item>
        <item name="colorSecondaryVariant">#018786</item>
        <item name="colorOnSecondary">#000000</item>
        <!-- Cor da Status Bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- TEMA NOVO: Sem Action Bar (Para usar Toolbar customizada) -->
    <style name="Theme.Smartwatch.NoActionBar" parent="Theme.Smartwatch">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>